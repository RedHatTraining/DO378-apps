{
  "name": "speaker-dashboard",
  "version": "0.0.2",
  "description": "A simple Keycloak-enabled dashboard for the speaker microservice.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "npm run clean",
    "build": "webpack --config webpack.prod.js",
    "start": "sirv dist --cors --single --host --port 8080",
    "dev": "webpack serve --color --progress --config webpack.dev.js",
    "eslint": "eslint --ext .tsx,.js ./src/",
    "lint": "npm run eslint",
    "format": "prettier --check --write ./src/**/*.{tsx,ts}",
    "type-check": "tsc --noEmit",
    "ci-checks": "npm run type-check && npm run lint && npm run test:coverage",
    "build:bundle-profile": "webpack --config webpack.prod.js --profile --json > stats.json",
    "bundle-profile:analyze": "npm run build:bundle-profile && webpack-bundle-analyzer ./stats.json",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@patternfly/react-icons": "^4.11.17",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "prettier": "^2.3.1",
    "raw-loader": "^4.0.2",
    "react-axe": "^3.5.4",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^7.1.1",
    "terser-webpack-plugin": "^5.1.3",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.3",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@patternfly/react-core": "^4.239.0",
    "@patternfly/react-styles": "^4.89.0",
    "@patternfly/react-table": "^4.108.0",
    "@react-keycloak/web": "^3.4.0",
    "keycloak-js": "^20.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sirv-cli": "^1.0.12",
    "wretch": "^1.7.6"
  }
}
